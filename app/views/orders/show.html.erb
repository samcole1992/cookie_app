<div class="row container">
  <div class="columns large-3 small-6">
    <h2><%=@order.user.username %> wants cookies!</h2>

    <h3>
      <%=@order.user.username %> wants <%= @order.cookie_amount%> <%= @order.cookie_type%> cookies
    </h3>

    <h3>
    <%=@order.user.username %> requests <%= @pickup %> at <%= @user.street %>, <%= @user.city %>, <%= @user.state %> <%= @user.zip %>
    </h3>

    <h3>
      <%=@order.user.username  %> will pay <%=@order.payment %> dollars
    </h3>
    <h3>
      <%=@order.user.username %> can be contacted at <%=@order.user.phone_number%>
    </h3>

  <%if !@order.fulfilled %>
    <%= form_for(@order) do |f| %>
      <div class="field">
        <%= f.label :fulfilled, "Accept?" %>
        <%= f.check_box :fulfilled %>
      </div>

      <div class="actions">
        <%= f.submit "Submit" %>
      </div>
    <% end %>
  <% elsif @order.fulfilled && !@order.completion %>
    <%= form_for(@order) do |f| %>
      <div class="field">
        <%= f.label :completion, "Order Complete" %>
        <%= f.check_box :completion %>
      </div>

      <div class="actions">
        <%= f.submit "Submit" %>
      </div>
    <% end %>
  <%end%>

  <p><%= link_to "Back to Orders", users_path %></p>
  <p><%= link_to "Back to Home ", @user %></p>


  </div>
</div>
