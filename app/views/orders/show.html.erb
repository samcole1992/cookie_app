<div class="sign_up_whole">

  <div class="row container">
    <div class="columns large-6 small-12">
      <h3>
        <%=@order.consumer.username %> wants <%= @order.cookie_amount%> <%= @order.cookie_type%> cookies
      </h3>

      <h3>
      <%=@order.consumer.username %> requests <%= @pickup %> at <%= @user.street %>, <%= @user.city %>, <%= @user.state %> <%= @user.zip %>
      </h3>

      <h3>
        Allergies:
        <%=@order.allergies %>
      </h3>

      <h3>
        <%=@order.consumer.username  %> will pay <%=@order.payment %> dollars
      </h3>
      <h3>
        <%=@order.consumer.username %> can be contacted at <%=@order.consumer.phone_number%>
      </h3>

  <% if @order.consumer != @user %>

    <%if !@order.fulfilled %>
      <%= form_for(@order) do |f| %>
        <div class="field">
          <%= f.label :fulfilled, "Accept?" %>
          <%= f.check_box :fulfilled %>
        </div>

        <div class="actions">
          <%= f.submit "Submit" %>
        </div>
      <% end %>

      <% if @order.fulfilled %>
        <% @order.provider = @user %>
      <% end %>
    <%end%>
  <%end%>
  <% if @order.consumer == @user %>

      <% if @order.fulfilled && !@order.completion %>
        <%= form_for(@order) do |f| %>
          <div class="field">
            <%= f.label :completion, "Order Complete?" %>
            <%= f.check_box :completion %>
          </div>

          <div class="actions">
            <%= f.submit "Submit" %>
          </div>
        <% end %>
      <% end %>
  <% end %>

    <p><%= link_to "Back to Orders", users_path %></p>
    <p><%= link_to "Back to Home ", @user %></p>

    </div>
  </div>
</div>
