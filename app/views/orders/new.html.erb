<div class="bar-form columns large-6 small-12">
  <h3>Get me some cookies</h3>

  <%= form_for(@order) do |f| %>

    <div class="field">
      <%= f.label :address %><br/>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :city %><br/>
      <%= f.text_field :city %>
    </div>

    <div class="field">
      <%= f.label :state %><br/>
      <%= f.text_field :state %>
    </div>

    <div class="field">
      <%= f.label :zip %><br/>
      <%= f.text_field :zip %>
    </div>

    <div class="field">
      <%= f.label :cookie_type %><br/>
      <%= f.text_field :cookie_type %>
    </div>

    <div class="field">
      <%= f.label :cookie_amount %><br/>
      <%= f.text_field :cookie_amount %>
    </div>

    <div class="field">
      <%= f.label :payment %><br/>
      <%= f.text_field :payment %>
    </div>

    <div class="field">
      <%= f.label :allergies %><br/>
      <%= f.text_field :allergies %>
    </div>

    <div class="actions">
      <%= f.submit(value="Submit Order") %>
    </div>

  <% end %>

</div>
