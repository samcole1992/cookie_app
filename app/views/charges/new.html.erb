<div class="small-8 small-centered columns">
<div class="sign_up_whole ">

<%= form_for @charge do |f| %>
  <% if @charge.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@charge.errors.count, "error") %> prohibited this subscription from being saved:</h2>
      <ul>
      <% @charge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :order_id %>

  <div class="field">
      <%= label_tag :card_number, "Credit Card Number ",id: "forms" %>
      <%= text_field_tag :card_number, nil, name: nil %>
  </div>
  <div class="field">
      <%= label_tag :card_code, "Security Code on Card (CVV)",id: "forms" %>
      <%= text_field_tag :card_code, nil, name: nil %>
  </div>
  <div class="field">
    <%= label_tag :card_month, "Card Expiration",id: "forms" %>
    <%= select_month nil, {add_month_numbers_true: true}, {name: nil, id: "card_month"}%>
    <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"}%>
  </div>
  <div class="actions"><%= f.submit "Pay" %></div>
<% end %>
</div>
</div>
